<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tongtu.cyber.modules.util.upload.minio.mapper.FileChunkMapper">
       <!-- 通用查询列 -->
    <sql id="Base_Column_List">
id, file_name, current_chunk_index, current_chunk_size, total_size, total_chunk, md5, file_path, file_type, created_by, update_by, update_time, created_time, chunk_size, complete_flag
    </sql>
     <select id="getList" resultType="com.tongtu.cyber.util.minio.domain.FileChunk">
            select <include refid="Base_Column_List"/>  from file_chunk
            <where>
                <if test="param.name!= null and param.name!= ''">
                    and name like concat('%',#{param.name},'%')
                </if>
                <if test="param.ids!=null and param.ids.size()>0">
                    and id in
                    <foreach collection="param.ids" index="index" item="item" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </if>
            </where>
            order by update_time desc
     </select>


</mapper>
